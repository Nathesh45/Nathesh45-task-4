<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Social Media Chat UI</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: "Segoe UI", sans-serif;
}

body {
  background: linear-gradient(135deg, #0f172a, #020617);
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* CHAT CONTAINER */
.chat-app {
  width: 380px;
  height: 600px;
  background: #020617;
  border-radius: 20px;
  overflow: hidden;
  box-shadow: 0 20px 50px rgba(0,0,0,0.6);
  display: flex;
  flex-direction: column;
}

/* HEADER */
.chat-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 15px;
  background: #0f172a;
}

.avatar {
  width: 45px;
  height: 45px;
  background: #38bdf8;
  border-radius: 50%;
}

.user-info h4 {
  color: #fff;
  font-size: 16px;
}

.user-info span {
  font-size: 12px;
  color: #22c55e;
}

/* MESSAGES */
.chat-messages {
  flex: 1;
  padding: 15px;
  overflow-y: auto;
}

.message {
  max-width: 70%;
  padding: 10px 14px;
  border-radius: 18px;
  margin-bottom: 10px;
  animation: pop 0.3s ease;
  font-size: 14px;
}

.received {
  background: #1e293b;
  color: #fff;
}

.sent {
  background: #38bdf8;
  color: #020617;
  margin-left: auto;
}

/* INPUT */
.chat-input {
  display: flex;
  padding: 12px;
  background: #0f172a;
}

.chat-input input {
  flex: 1;
  padding: 12px;
  border-radius: 20px;
  border: none;
  outline: none;
}

.chat-input button {
  margin-left: 10px;
  padding: 10px 16px;
  border-radius: 20px;
  border: none;
  background: #38bdf8;
  cursor: pointer;
}

/* ANIMATION */
@keyframes pop {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* MOBILE */
@media (max-width: 420px) {
  .chat-app {
    width: 100%;
    height: 100vh;
    border-radius: 0;
  }
}
</style>
</head>

<body>

<div class="chat-app">
  <div class="chat-header">
    <div class="avatar"></div>
    <div class="user-info">
      <h4>Alex</h4>
      <span>‚óè Online</span>
    </div>
  </div>

  <div class="chat-messages" id="messages">
    <div class="message received">Hey üëã</div>
    <div class="message sent">Hi! How‚Äôs it going?</div>
  </div>

  <div class="chat-input">
    <input type="text" id="input" placeholder="Type a message..." />
    <button onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
function sendMessage() {
  const input = document.getElementById("input");
  const msg = input.value.trim();
  if (!msg) return;

  const div = document.createElement("div");
  div.className = "message sent";
  div.textContent = msg;

  const messages = document.getElementById("messages");
  messages.appendChild(div);
  messages.scrollTop = messages.scrollHeight;

  input.value = "";
}
</script>

</body>
</html>


